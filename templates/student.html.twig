{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block styles %}
	@import "/plugins/monthly/monthly.css";
	
	.monthly-event-list {
		top: 85px !important;
		height: calc(100% - 85px) !important;
	}
	
{% endblock %}

{% block content %}
	<div class="row"> 
		<div class="col-md-2 text-xs-center">
			<div class="card card-inverse">
				<div class="card-header card-success">
					Student Details
				</div>
				
				<div class="card-block">
					<img class="img-thumbnail" src="/images/1.png"><br>
					Name: {{ student.name }} {{ student.surname }} <br>
					Barcode: {{ student.barcode }}
				</div>
			</div>
		</div>
		
		<div class="col-md-7" >
			<div class="card card-inverse">
				<div class="card-header card-success">
					Attendance Details
				</div>
				
				<div class="card-block">
					<table class="table table-hover table-condensed table-striped">
						<tr>
							<th>ID</th>
							<th>Date</th>
							<th>Time</th>
						</tr>
						
						{% for att in student.attendance %}
						<tr>
							<td>{{ att.id }}</td>
							<td>{{ att.date|date("d/m/Y") }}</td>
							<td>{{ att.date|date("H:i:s", "Europe/Dublin") }}</td>
						</tr>
						{% endfor %}
					</table>
				</div>
			</div>
		</div>
		
		<div class="col-md-3" >
			<div class="card card-inverse">
				<div class="card-header card-success">
					List of Techniques
				</div>
				<div class="card-block card-custom">
					<ul class="list-group">
						{% for tech in student.technique %}
							<a href='#' class="list-group-item ">{{ tech.name }}</a>
						{% endfor %}
					</ul>
				</div>
			</div>
			
			<div class="card card-inverse">
				<div class="card-header card-success">
					Calendar
				</div>
				
				<div class="card-block card-custom">
					<div id="calendar"></div>
				</div>
			</div>
		</div>
	</div>
	
	<script src="/plugins/monthly/monthly.js"></script>
	
	<script>
		$(document).ready(function(){
			$('#calendar').monthly({
				mode: 'event',
				xmlUrl: '/events/{{ student.barcode }}',
				eventList: true,
				mode: 'event',
				weekStart: 'Mon',
			});
		});
	</script>
{% endblock %}