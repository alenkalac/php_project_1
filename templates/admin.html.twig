{% extends 'base.html.twig' %}

{% block title %}
	Admin Page
{% endblock %}

{% block content %}

<div class="row">
	<div class="col-md-3">
		{% include 'modules/admin-controls.html.twig' %}
	</div>
	
	<div class="col-md-9">
		<div class="card card-inverse">
			<div class="card-header card-success">List of all students</div>
			<div class="card-block">
				 <table class="table table-hover table-condensed table-striped">
		  			<tr>
		  				<th>Barcode</th>
		  				<th>Student Name</th>
		  				<th>Student Surname</th>
		  				<th>Options</th>
		  			</tr>
		  			
		  			{% for student in  students %}
						<tr>
							<td><a href='/student/{{ student.barcode|e }}'>{{ student.barcode|e }}</a></td>
							<td>{{ student.name|e }}</td>
							<td>{{ student.surname|e }}</td>
							<td class="text-xs-center">
								<a href="" data-toggle="tooltip" data-placement="top" title="Edit Student" class="btn btn-success"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
								<a href="" data-toggle="tooltip" data-placement="top" title="Delete Student" class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
							</td>
		  			 </tr>
					{% endfor %}
		  		
		  		</table>
			</div>
		</div>
	</div>
	
	<script>
		$(document).ready(function(){
			$('[data-toggle="tooltip"]').tooltip()
		});
	</script>
</div>


{% endblock %}